{
  "name": "craft-web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/craft-web/src",
  "schematics": {
    "@schematics/angular:component": {
      "standalone": false
    }
  },
  "tags": [],
  "implicitDependencies": ["craft-nest"],
  "generators": {
    "@nx/angular:component": {
      "style": "scss",
      "changeDetection": "OnPush",
      "skipTests": true,
      "export": false
    },
    "@nx/angular:application": {
      "style": "scss",
      "routing": true,
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "playwright"
    }
  },
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/craft-web/**/*.ts",
          "apps/craft-web/**/*.html"
        ]
      }
    },
    "stylelint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx stylelint 'apps/craft-web/**/*.scss' 'apps/craft-web/**/*.css'"
      }
    },
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath.base}"],
      "options": {
        "outputPath": {
          "base": "dist/apps/craft-web"
        },
        "index": "apps/craft-web/src/index.html",
        "polyfills": ["apps/craft-web/src/polyfills.ts"],
        "tsConfig": "apps/craft-web/tsconfig.app.json",
        "assets": [
          "apps/craft-web/src/assets",
          {
            "glob": "flag-icons.min.css",
            "input": "node_modules/flag-icons/css",
            "output": "assets/css/"
          },
          {
            "glob": "**/*",
            "input": "node_modules/flag-icons/flags",
            "output": "assets/flags/"
          },
          {
            "glob": "**/*",
            "input": "apps/craft-web/src/assets/documents",
            "output": "assets/documents"
          }
        ],
        "styles": [
          "apps/craft-web/src/styles.scss",
          "node_modules/ngx-toastr/toastr.css",
          "node_modules/mapbox-gl/dist/mapbox-gl.css"
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["apps/craft-web/src/styles", "node_modules/@angular/material/typography"]
        },
        "scripts": [],
        "allowedCommonJsDependencies": [
          "jszip",
          "moment",
          "moment-timezone",
          "xlsx",
          "mapbox-gl",
          "mapbox-gl-geocoder",
          "mapbox-gl-directions",
          "mapbox-gl-draw",
          "mapbox-gl-geolocate-control",
          "mapbox-gl-language",
          "mapbox-gl-traffic",
          "debug"
        ],
        "browser": "apps/craft-web/src/main.ts"
      },
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/craft-web/src/environments/environment.ts",
              "with": "apps/craft-web/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "aot": true,
          "extractLicenses": true,
          "serviceWorker": false
        },
        "development": {
          "optimization": false,
          "sourceMap": true,
          "namedChunks": true,
          "extractLicenses": false
        }
      }
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "buildTarget": "craft-web:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "craft-web:build:production",
          "proxyConfig": "apps/craft-web/src/proxy.config.prod.json"
        },
        "development": {
          "buildTarget": "craft-web:build:development",
          "proxyConfig": "apps/craft-web/src/proxy.config.json"
        }
      },
      "defaultConfiguration": "development",
      "continuous": true
    },
    "extract-i18n": {
      "executor": "@nx/angular:extract-i18n",
      "options": {
        "buildTarget": "craft-web:build"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/craft-web/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
