{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "@craft-web/*": ["src/app/*"]
    },
    "outDir": "dist/out-tsc",
    "types": ["jest", "node"],
    "rootDir": "../../",
    "sourceMap": true
  },
  "files": [],
  "include": ["src/**/*.ts"],
  "exclude": ["src/test-setup.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
