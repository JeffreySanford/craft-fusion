{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"],
    "lib": ["ES2020", "dom"], // Ensure 'dom' is included
    "baseUrl": "./",
    "paths": {
      "@craft-web/*": ["src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "src/main.ts"],
  "exclude": ["tmp"]
}
