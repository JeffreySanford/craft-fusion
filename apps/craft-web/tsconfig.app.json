{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["ES2020", "dom"]
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
