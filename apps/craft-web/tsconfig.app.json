{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node"
    ]
  },

  // Relax a few strict checks temporarily to allow iterative fixes
  "angularCompilerOptions": {
    "strictTemplates": false
  },
  "compilerOptionsOverrides": {
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/main.ts",
    "src/polyfills.ts",
    "../../libs/craft-library/src/index.ts",
    "../../libs/craft-library/src/**/*.ts"
  ],
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts"
  ],
  "files": [
    // No changes needed for SCSS import resolution
  ]
}
