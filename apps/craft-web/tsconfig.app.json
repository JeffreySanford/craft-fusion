{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "src/app/app.module.ts",
    "src/app/app.component.ts",
    "src/app/app.routes.ts",
    "src/environments/environment.ts",
    "src/environments/environment.prod.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/test-setup.ts"
  ]
}
