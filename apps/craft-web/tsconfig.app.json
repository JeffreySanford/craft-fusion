{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "node"
    ]
  },

  // Relax a few strict checks temporarily to allow iterative fixes
  "angularCompilerOptions": {
    "strictTemplates": false
  },
  "compilerOptionsOverrides": {
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*.d.ts"
  ],
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "exclude": [
    "src/test-setup.ts",
    "**/*.spec.ts"
  ]
}
