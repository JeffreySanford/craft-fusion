{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2022",
    "baseUrl": "./",
    "paths": {
      "@craft-nest/*": ["src/*"]
    },
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"],
    "rootDir": ".",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.d.ts",
    "src/ecosystem.config.js",
    "src/main.ts"
  ],
  "exclude": ["tmp"]
}