{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@craft-nest/*": ["src/*"]
    },
    "types": ["jest", "node"],
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "src/**/*.d.ts", "src/ecosystem.config.js", "src/main.ts"],
  "exclude": ["tmp"]
}
