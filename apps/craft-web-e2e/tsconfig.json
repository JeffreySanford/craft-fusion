{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["jest", "node"],
    "baseUrl": "./",
    "paths": {
      "@craft-web/*": ["src/*"]
    },
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "../../apps/craft-web/src/**/*.ts", "src/**/*.spec.ts", "src/**/*.e2e-spec.ts"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.e2e-spec.ts"]
}
