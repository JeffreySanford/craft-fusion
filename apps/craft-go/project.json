{
  "name": "craft-go",
  "root": "apps/craft-go",
  "sourceRoot": "apps/craft-go/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go build -o ../../dist/apps/craft-go/main ./main.go",
        "cwd": "apps/craft-go"
      },
      "configurations": {
        "production": {
          "command": "GOOS=linux GOARCH=amd64 go build -ldflags=\"-s -w\" -o ../../dist/apps/craft-go/main ./main.go",
          "cwd": "apps/craft-go"
        },
        "development": {
          "command": "go build -o ../../dist/apps/craft-go/main.exe ./main.go",
          "cwd": "apps/craft-go"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go run main.go",
        "cwd": "apps/craft-go"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "go test ./...",
        "cwd": "apps/craft-go"
      }
    }
  }
}
