{
  "compilerOptions": {
    // ğŸ¯ Root and Module Resolution
    "rootDir": "./",
    "baseUrl": "./",
    "moduleResolution": "node",
    "module": "esnext",
    "target": "ES2022",
    "lib": ["es2022", "dom"],

    // âš™ï¸ Build Output
    "outDir": "dist/out-tsc",
    "sourceMap": true,
    "composite": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    // ğŸ›¡ï¸ Strict Type-Checking Options
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    // ğŸ“ Decorators and Metadata
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,

    // ğŸ› ï¸ Module Interoperability
    "esModuleInterop": true
  },

  // ğŸš« Paths (Removed Unused Paths)
  "paths": {},

  // ğŸ” Files and Includes
  "files": [],
  "include": ["**/*.ts"],
  "references": [],

  // ğŸ“‚ Exclude from Compilation
  "exclude": ["node_modules", "tmp"],

  // âš¡ Angular Specific Compiler Options
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },

  // ğŸ”„ Enable Compile on Save (if using VS Code)
  "compileOnSave": false
}
