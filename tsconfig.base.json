{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",      // Use ES2022 for modern JavaScript features
    "module": "NodeNext",    // NodeNext for interoperability with Node.js ES modules
    "moduleResolution": "NodeNext", // Ensure proper resolution for NodeNext modules
    "esModuleInterop": true, // Allows compatibility between CommonJS and ESModule
    "lib": ["es2018", "dom"],
    "declaration": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,

    "baseUrl": "./",
    "paths": {
    },
    "outDir": "./dist/out-tsc",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types"],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "include": [
    "jest.config.ts"
  ],
  "exclude": ["tmp"]
}
