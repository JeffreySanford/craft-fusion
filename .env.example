# Example environment variables for Craft Fusion
# Copy this file to `.env` and fill in real values for your environment.

# Development Environment Variables (examples, do NOT commit real secrets)
NX_ALPHA_VANTAGE_API_KEY=demo
NX_YAHOO_FINANCE_API_KEY=demo_key
NX_FLIGHTRADAR24_API_KEY=demo_key
NX_MAPBOX_ACCESS_TOKEN=pk.example.mapbox_token
NX_FINNHUB_API_KEY=demo_key
NX_NASA_FIRMS_API_KEY=your-development-nasa-firms-api-key-here

# Production API Keys (placeholders)
NX_PROD_FINNHUB_API_KEY=replace_with_prod_key
NX_PROD_MAPBOX_ACCESS_TOKEN=pk.replace_with_prod_token
NX_PROD_FLIGHT_RADAR_API_KEY=replace_with_prod_key
NX_PROD_ALPHA_VANTAGE_API_KEY=replace_with_prod_key
NX_PROD_YAHOO_FINANCE_API_KEY=replace_with_prod_key

# Application Configuration
NX_API_URL=https://your.production.url/api
NX_HOST=your.production.host
NX_SOCKET_URL=wss://your.production.url
NX_FINNHUB_API=https://finnhub.io/api/v1
NX_NASA_FIRMS_ENDPOINT=https://firms.modaps.eosdis.nasa.gov/api/active-fires

# Logging / Sentry
SENTRY_DSN=
LOG_LEVEL=info

# JWT (replace in production with secure values)
JWT_SECRET=replace_with_secure_jwt_secret
JWT_EXPIRATION=3600

# Admin dev credential (DEV ONLY) - do not use in production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# OpenAI (server-side). Add your key here to enable server-side AI features.
# Example: OPENAI_API_KEY=sk-REPLACE_ME
OPENAI_API_KEY=sk-REPLACE_ME
