{
  // Exclude files/folders from the file explorer
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true, // Exclude node_modules
    "**/dist": true,         // Exclude build output
    "**/.nx/cache": true,   // Exclude NX cache
    "apps/craft-web/src/assets/shapefiles": true, // Optionally exclude large assets if not actively editing them
    "apps/training/models": true, // Optionally exclude generated models
    "apps/training/training_data": true // Optionally exclude large training data
    ,
    // Ignore temporary and playwright report folders in Explorer
    "**/tmp": true,
    "**/tmp/**": true,
    "**/playwright-report": true,
    "**/playwright-report/**": true
  },
  // Exclude files/folders from search results
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/.nx/cache": true,
    "apps/craft-web/src/assets/shapefiles": true,
    "apps/training/models": true,
    "apps/training/training_data": true,
    // Exclude tmp and playwright report from search
    "**/tmp/**": true,
    "**/playwright-report/**": true
  },
  // Exclude files/folders from the file watcher (reduces CPU/memory usage)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.nx/cache/**": true,
    "**/dist/**": true,
    "apps/craft-web/src/assets/shapefiles/**": true,
    "apps/training/models/**": true,
    "apps/training/training_data/**": true,
    // Reduce watcher noise for tmp and playwright output
    "**/tmp/**": true,
    "**/playwright-report/**": true
  },
  // Hide diagnostics from Problems for these generated folders
  "problems.exclude": {
    "**/tmp/**": true,
    "**/playwright-report/**": true
  },
  "nxConsole.generateAiAgentRules": true,
  "angular.enable-strict-mode-prompt": false,
  "typescript.tsdk": "node_modules\\typescript\\lib"
}
